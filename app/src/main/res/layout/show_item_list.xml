<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/show_item_height"
    android:layout_marginHorizontal="@dimen/item_recycler_view_default_margin_horizontal"
    android:layout_marginVertical="@dimen/item_recycler_view_default_margin_vertical"
    android:backgroundTint="@color/show_item_card_background"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/card_view_corner_radius_default">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewPoster"
            android:layout_width="@dimen/show_item_poster_image_width"
            android:layout_height="@dimen/show_item_poster_image_height"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_foreground"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/show_item_title_text_view_margin_top"
            android:layout_marginHorizontal="@dimen/show_item_title_text_view_margin_horizontal"
            android:textColor="@color/default_text_color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@+id/imageViewPoster"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textViewAverageScore"
            tools:text="Show's Title" />


        <TextView
            android:id="@+id/textViewAverageScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="10"
            android:textColor="@color/show_item_rating_bar_color"
            android:textStyle="bold|italic"
            app:layout_constraintTop_toTopOf="@id/textViewTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/show_item_average_score_text_view_margin_end"
            tools:text="8.3" />

        <TextView
            android:id="@+id/textViewSummary"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/show_item_body_text"
            android:textStyle="italic"
            android:ellipsize="end"
            android:maxLines="4"
            app:layout_constraintWidth_default="wrap"
            android:layout_marginVertical="@dimen/show_item_summary_text_view_margin_vertical"
            app:layout_constraintStart_toStartOf="@id/textViewTitle"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"
            app:layout_constraintEnd_toEndOf="@id/textViewAverageScore"
            app:layout_constraintBottom_toTopOf="@id/textViewGenres"
            tools:text="This Emmy winning series is a comic look at the assorted humiliations" />

        <TextView
            android:id="@+id/textViewGenres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/show_item_body_text"
            android:layout_marginBottom="@dimen/show_item_genres_text_view_margin_bottom"
            app:layout_constraintStart_toStartOf="@id/textViewTitle"
            app:layout_constraintBottom_toTopOf="@id/textViewAverageRuntime"
            app:layout_constraintEnd_toEndOf="@id/textViewAverageScore"
            tools:text="Action, Adventure" />

        <TextView
            android:id="@+id/textViewAverageRuntime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/show_item_average_runtime_text_view_margin_bottom"
            app:layout_constraintStart_toStartOf="@id/textViewTitle"
            app:layout_constraintEnd_toEndOf="@id/textViewAverageScore"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="60 minutes"
            style="@style/show_item_body_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>