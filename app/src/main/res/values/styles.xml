<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TVmaze">
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="TVmaze.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TVmaze.SubTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TVmaze.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TVmaze.Body">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TVmaze.TextRating">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/show_item_rating_bar_color</item>
    </style>

    <style name="TVmaze.TVmazeSearchView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/search_view_height</item>
        <item name="android:layout_marginStart">@dimen/default_margin_32dp</item>
        <item name="android:layout_marginEnd">@dimen/default_margin_32dp</item>
        <item name="android:layout_marginTop">@dimen/default_margin_16dp</item>
        <item name="android:layout_marginBottom">@dimen/default_margin_16dp</item>
        <item name="android:background">@drawable/background_search_bar</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">textFilter</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/default_margin_16dp</item>
        <item name="android:paddingEnd">@dimen/default_margin_16dp</item>
    </style>

    <style name="TVmaze.BackButton">
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/default_padding_8dp</item>
    </style>
</resources>